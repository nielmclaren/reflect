{
    "compilerOptions": {
        "target": "es2019",
        "lib": [
            "es2020",
            "dom"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "allowJs": false,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "baseUrl": "."
    },
    "files": [
        "index.ts"
    ],
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}